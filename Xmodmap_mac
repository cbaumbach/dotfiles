! .Xmodmap

! In Xubuntu 22.04, to have the remapping automatically applied on
! startup go to Settings, Session and Startup, Application Autostart,
! and add a new item that runs the following command.
!
! /bin/bash -c "sleep 5; xmodmap $HOME/.dotfiles/Xmodmap_mac"

clear Control
clear Mod1
clear Mod4

! Alt_L to Control_L
keycode 133 = Control_L

! Alt_R to Control_R
keycode 134 = Control_R

! Super_L to Alt_L
keycode 64 = Alt_L

! Super_R to Alt_R
keycode 108 = Alt_R

! Control_L to Super_L
keycode 37 = Super_L

add Control = Control_L Control_R
add Mod1    = Alt_L Alt_R
add Mod4    = Super_L
