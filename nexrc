set autoindent
set cedit=
set exrc
set extended
set filec=
set iclower
set leftright
set ruler
set searchincr
set shiftwidth=4
set showmatch
set sidescroll=1
set tabstop=4
set tildeop

" Leave insert mode
map! jk 

" Toggle case of previous word
map!  m_b~e`_a

" Replace tabs with spaces
map gt m_:%s/	/    /g`_

" Delete trailing whitespace and empty lines at end of file
map gk m_:g/[ 	]+$/s///Go:?[^ 	]?+1,.d`_

" Commenting
:map!  #
:map g= :unmap! :map!  
:map gc m_'m0i "_yws:'m,'_s/^/"_Pxhf/a& / "_d0x:@_
:map gu :'m,.s/ //
